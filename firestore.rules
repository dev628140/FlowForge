
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /tasks/{taskId} {
      // Allow read and update if the user's email is in the 'memberEmails' array.
      // This enables collaboration for both owners and shared users.
      allow read, update: if request.auth != null && request.auth.token.email in resource.data.memberEmails;
      
      // Allow create only if the user is authenticated and is the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow delete only if the user is the original owner of the task.
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
